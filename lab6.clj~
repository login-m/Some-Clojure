;***************************************
; Unique Function
;***************************************

;Hepler function to check if the rest of the seq contains passed values
(def contains-helper
  (fn [s e]
    (if
      (empty? s) false
      (if
        (= (first s) e) true
	(recur (rest s) e)))))
	
;Main function
(def unique
  (fn [F s]
    (if (not (empty? s))
      (if (contains-helper (rest s) (first s))
        (recur F (rest s))
	(do
	  (F (first s))
	  (recur F (rest s)))))))



;***************************************
; Nest Function
;***************************************

(def comp-help
  (fn [f g]
    (fn [& a]
      (f (apply g a)))))
      
;(comp - *) => (fn[& a] (- (apply * a)))


;(def inc0 (nest inc 0))

(def nest
  (fn [F N]
    (if (= N 0)
      1
      (fn [num]
        (F (nest F (- N 1)))))))
    

      
