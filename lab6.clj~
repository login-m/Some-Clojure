 ; (fn [F N]
  ;  (fn [num]
   ;   (if (> N 0)
    ;    (F (nest F (- N 1)))
;	1))))

;***************************************
; Cartesian Function
;***************************************

;Helper function  to map each value of u to all the elements of v
(def mappy
  (fn [F current elements]
   (if
     (empty? elements)
    '()
    (concat
      (list(F current (first elements)))
      (mappy F current (rest elements))))))


;Main function
(def cartesian
  (fn [F u v]
    (if (empty? u)
      '()
    (concat (mappy F (first u) v) (cartesian F (rest u) v)))))
